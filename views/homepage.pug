doctype html
html 
    head 
        title= `${title}`
        meta(name="viewport" content="width=device-width, initial-scale=1")
        link(rel="stylesheet", href="/css/style.css")
    body    
        h1 Pets
        a(href='/update-cobj') Add to this table

        table
            thead
                tr
                    th Name
                    th Description
                    th Age (years)
                    th Weight (Kg.)
            tbody
                each pet in data
                    tr 
                        td #{pet.properties.pet_name}
                        td #{pet.properties.pet_type}
                        td #{pet.properties.age}
                        td #{pet.properties.weight}
